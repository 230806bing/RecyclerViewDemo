<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"/>


    <ImageView
        android:id="@+id/banner"
        android:layout_width="0dp"
        android:layout_height="220dp"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img1"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.9"
        android:text="一级标题一级标题一级标题一级标题一级标题"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/banner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/article"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.9"
        android:text="正文内容正文内容正文内容文内容正文内容正文内容正文内容正文内容正文内容正文内容正文内容正文内容正文内容正文内容正文内容正文内容正文内容正文内容正文内容正文内容正文内容正文内容文内容正文内容正文内容正文内容正文内容正文内容正文内容正文内容正文内容正文内容正文内容正文内容正文内容正文内容正文内容正文内容"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:letterSpacing="0.05"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.9"
        android:text="收起"
        android:textSize="14dp"
        android:textColor="#00BFFF"
        android:letterSpacing="0.05"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/article"
        app:layout_constraintLeft_toLeftOf="@id/article"/>
    
    <ImageView
        android:id="@+id/link_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.14"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/item_bg"/>

    <ImageView
        android:id="@+id/img_goods"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintWidth_percent="0.18"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="@id/link_background"
        app:layout_constraintTop_toTopOf="@+id/link_background"
        app:layout_constraintBottom_toBottomOf="@id/link_background"
        android:src="@drawable/a"/>

    <TextView
        android:id="@+id/goods_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.05"
        android:gravity="bottom"
        android:text="二级标题"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:letterSpacing="0.08"
        app:layout_constraintLeft_toRightOf="@id/img_goods"
        app:layout_constraintTop_toTopOf="@id/img_goods"/>

    <TextView
        android:id="@+id/goods_describe"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.05"
        android:gravity="bottom"
        android:text="三级标题三级标题三级标题"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:letterSpacing="0.08"
        android:textSize="12dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintLeft_toRightOf="@id/goods_name"
        app:layout_constraintTop_toTopOf="@id/img_goods"/>

    <TextView
        android:id="@+id/goods_price"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.05"
        android:gravity="center"
        android:text="￥239"
        android:textColor="#ff0000"
        android:textSize="14dp"
        android:paddingLeft="5dp"
        android:letterSpacing="0.05"
        app:layout_constraintLeft_toRightOf="@id/img_goods"
        app:layout_constraintBottom_toBottomOf="@id/img_goods"/>

    <ImageView
        android:id="@+id/goods_star"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.03"
        app:layout_constraintHeight_percent="0.03"
        android:src="@drawable/star"
        app:layout_constraintRight_toLeftOf="@id/tv_goods_star"
        app:layout_constraintBottom_toBottomOf="@id/img_goods"/>

    <TextView
        android:id="@+id/tv_goods_star"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.03"
        android:gravity="top"
        android:text="收藏商品"
        android:textSize="12dp"
        android:textColor="#808080"
        android:letterSpacing="0.05"
        android:paddingRight="15dp"
        android:paddingLeft="5dp"
        app:layout_constraintRight_toRightOf="@id/link_background"
        app:layout_constraintBottom_toBottomOf="@id/goods_star"/>





    <com.example.recyclerviewdemo.CircleImageView
        android:id="@+id/img_portrait"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.1"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/tv"
        app:layout_constraintTop_toBottomOf="@id/link_background"
        android:scaleType="centerCrop"
        android:src="@drawable/img"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        android:text="KOL名称"
        android:textSize="16dp"
        android:textColor="#808080"
        android:letterSpacing="0.05"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/img_portrait"
        app:layout_constraintLeft_toRightOf="@id/img_portrait"/>

    <ImageView
        android:id="@+id/img_like"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.05"
        app:layout_constraintHeight_percent="0.05"
        android:src="@drawable/like"
        app:layout_constraintTop_toTopOf="@id/img_portrait"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/line1"/>

    <TextView
        android:id="@+id/num_like"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.05"
        android:layout_marginLeft="5dp"
        android:text="123231"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/img_like"
        app:layout_constraintTop_toTopOf="@id/img_portrait"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <ImageView
        android:id="@+id/img_star"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.05"
        app:layout_constraintHeight_percent="0.05"
        android:src="@drawable/star"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_portrait"
        app:layout_constraintLeft_toLeftOf="@+id/line2"/>

    <TextView
        android:id="@+id/num_star"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.05"
        android:text="12341"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/img_star"
        app:layout_constraintTop_toTopOf="@id/img_portrait"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>